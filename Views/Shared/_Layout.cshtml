</head>

<body>
    <!-- Topbar Start -->
    <div class="container-fluid">

        <div class="row align-items-center py-3 px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a href="~/Home/Index" class="text-decoration-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">Keqing</span>Shop</h1>
                </a>
            </div>
            <div class="col-lg-6 col-6 text-left">


            </div>
            <div class="col-lg-3 col-6 text-right">
                @{
                    var user = (KQStore.Models.User)HttpContext.Current.Session["user"];
                    if (user != null)
                    {
                        <div style="display: inline-block">
                            <a href="~/User/Details">
                                <i class="fa fa-user user-icon" aria-hidden="true"></i> @user.Name
                            </a>
                        </div>
                        <div class="dangxuat" style="display: inline-block">
                            <a href="~/Home/Logout" class="flexa">Đăng xuất</a>
                        </div>
                    }
                    else
                    {
                        <div style="display: inline-block">
                            <a href="~/Home/Login" class="flexa">Đăng nhập</a>
                        </div>
                        <div style="display:inline-block">
                            <a href="~/Home/Register" class="flexa">Đăng ký</a>
                        </div>
                    }
                }
                <style>
                    .flexa {
                        color: black;
                        padding: 10px;
                        text-decoration: none;
                        right: 0px;
                    }

                        .flexa:hover {
                            color: #9966cc; /* Màu khi hover */
                        }

                    .user-icon, .dangxuat {
                        color: #9966FF; /* Màu tím */
                    }
                </style>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    @if (ViewBag.HideNavBar != true)
    {
        <div class="container-fluid ">
            <div class="row border-top px-xl-5">
                <div class="col-lg-3 d-none d-lg-block">
                    <a class="btn shadow-none d-flex align-items-center justify-content-between bg-primary text-white w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; margin-top: -1px; padding: 0 30px;">
                        <h6 class="m-0">Danh mục sản phẩm</h6>
                        <i class="fa fa-angle-down text-dark"></i>
                    </a>
                    <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 1000;">
                        <div class="navbar-nav w-100 overflow-hidden" style="height: auto">
                            @Html.Action("Index", "Category")

                        </div>
                    </nav>
                </div>
                <div class="col-lg-9">
                    <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">

                        <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                            <div class="navbar-nav mr-auto py-0">
                                <a href="~/Home/Index" class="nav-item nav-link @(ViewBag.CurrentPage == "Home" ? "active" : "")">Trang chủ</a>
                                <a href="~/Product/Index" class="nav-item nav-link @(ViewBag.CurrentPage == "Shop" ? "active" : "")">Cửa hàng</a>
                                <a href="~/Home/About" class="nav-item nav-link ">Về chúng tôi</a>
                                @*<a href="~/Home/Contact" class="nav-item nav-link ">Hình Ảnh</a>*@
                                @*<div class="nav-item dropdown">
                                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Pages</a>
                                        <div class="dropdown-menu rounded-0 m-0">
                                            <a href="cart.html" class="dropdown-item">Shopping Cart</a>
                                            <a href="checkout.html" class="dropdown-item">Checkout</a>
                                        </div>
                                    </div>*@
                                <a href="~/Home/Contact" class="nav-item nav-link @(ViewBag.CurrentPage == "Contact" ? "active" : "")">Liên hệ</a>
                            </div>
                            <div class="navbar-nav ml-auto py-0">

                                @*<a href="" class="nav-item nav-link">Login</a>
                                    <a href="" class="nav-item nav-link">Register</a>*@
                                @*<a href="" class="btn border">
