@model IEnumerable<KQStore.Models.ProductImage>


@{
    int i = 0;
}
@foreach (var item in Model)
{
    if (i == 0)
    {
        <div class="carousel-item active">
            <img class="w-100 h-100" src="@Url.Content(item.ImgPath)" alt="Image">
        </div>
        i++;
    }
    else
    {
        <div class="carousel-item">
            <img class="w-100 h-100" src="@Url.Content(item.ImgPath)" alt="Image">
        </div>
    }

}

