@model KQStore.Models.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="~/Image/keqinguser.jpg" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@Model.Name</h5>

                        
                    </div>
                </div>
            </div>
            

            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">

                                <div class="col-sm-3">
                                    <p class="mb-0">Họ Tên</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })</p>
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <hr>
                         
                            
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Email</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })</p>
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Số điện thoại</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })</p>
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Địa chỉ</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })</p>
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @Html.HiddenFor(model => model.UserId)
                            @Html.HiddenFor(model => model.RoleId)
                            @Html.HiddenFor(model => model.UserName)
                            @Html.HiddenFor(model => model.CreatedAt)
                            @Html.HiddenFor(model => model.UpdatedAt)
                            @Html.HiddenFor(model => model.Password)
                    <div class="text-center">
                        <input type="submit" value="Lưu" class="btn btn-outline-primary" data-mdb-button-init data-mdb-ripple-init />
                    </div>
                        }
                    </div>
                </div>
            </div>

        </div>
</div>
</section>