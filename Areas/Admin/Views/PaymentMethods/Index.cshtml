@model PagedList.PagedList<KQStore.Models.PaymentMethod>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}




<main>
    <div class="container-fluid px-4">

        <div class="card mt-4">
            <div class="card-header">
                <h3><i class="fas fa-table me-1"></i>Payment Method</h3>

            </div>
            <div class="card-body">
                <div class="datatable-wrapper datatable-loading no-footer sortable searchable fixed-columns">
                    <div class="datatable-top">
                        <div class="d-grid">
                            <a class="btn btn-primary btn-block" href="/Admin/PaymentMethods/Create">Create New</a>
                        </div>
                        <div class="datatable-search">
                            <input class="datatable-input" placeholder="Search..." type="search" title="Search within table" aria-controls="datatablesSimple">
                        </div>
                    </div>
                    <div class="datatable-container">
                        <table class="datatable-table">
                            <thead>
                                <tr>
                                    <th data-sortable="true" style="width: 10%;"><a href="#" class="datatable-sorter">PayId</a></th>
                                    <th data-sortable="true" style="width: 20%;"><a href="#" class="datatable-sorter">Name Method</a></th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var i = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr data-index="@i">

                                            <td>@Html.DisplayFor(modelItem => item.IdPay)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Name)</td>

                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.IdPay }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.IdPay })
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="datatable-bottom">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


